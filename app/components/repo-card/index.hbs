<div
  type="button"
  tabindex="0"
  class="rounded-lg overflow-hidden p-4 border border-gray-700 cursor-pointer transition duration-400 w-full text-left"
  ...attributes
  {{on "click" this.toggle}}
>
  <div class="flex items-center justify-between">
    <div class="flex flex-col">
      <div class="flex items-center gap-2">
        <a
          href={{@repo_url}}
          target="_blank"
          rel="noopener noreferrer"
          class="text-lg font-medium text-sky-500 hover:underline"
        >
          {{@repo_name}}
        </a>

        <span
          class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border border-gray-300 text-gray-300"
        >
          {{if @is_private "Private" "Public"}}
        </span>
      </div>

      <div class="text-sm text-gray-400">
        {{if @description @description "No description provided"}}
      </div>

      {{#if @language}}
        <div class="flex items-center">
          <span
            class="w-2 h-2 rounded-full mr-2"
            style={{language-color @language}}
          ></span>

          <span class="text-xs">
            {{@language}}
          </span>

        </div>
      {{/if}}
    </div>

    <div class="p-2 rounded-md">
      {{#if this.collapse}}
        {{svg-jar "chevron-down" class="w-5 h-5"}}
      {{else}}
        {{svg-jar "chevron-up" class="w-5 h-5"}}
      {{/if}}
    </div>
  </div>

  {{#unless this.collapse}}
    <div class="mt-4 pt-4 border-t border-gray-700">
      <span class="text-sm font-medium mb-2">Branches</span>
    </div>
  {{/unless}}
</div>